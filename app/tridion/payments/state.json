{
    "name": "payments",
    "url":"/tridion/payments",
    "features" : [{
        "name": "payment",
        "files": ["features/payment.js"]
    },{
        "name": "chat",
        "files": ["features/chat.js"]
    }],
    "parameters" : {"chat":"paymentcontext"},
    "views" : {
        "" : {
            "template": "<b><ui-view name='chat'></ui-view><ui-view name='third'></ui-view></b>"
        },
        "chat@payments" : {
            "template": "<i>Chat: {{data.settings}}</i>",
            "controller" : "chatMainController"
        },
        "third@payments" : {
            "templateUrl" : "payments/main.html",
            "controller" : "paymentsMainController"
        }
    }
}